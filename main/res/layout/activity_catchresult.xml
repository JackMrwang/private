<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Catch.CatchresultActivity">

    <LinearLayout
        android:background="#009688"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="查询结果"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:background="#060A06"
            android:layout_width="2dp"
            android:layout_height="18dp" />
        <TextView
            android:text="违章记录"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text1"
            android:text="学院路"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="未处理"
            android:background="#009688"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/textqq"
        android:layout_marginLeft="30dp"
        android:textColor="#0B0F0B"
        android:text="遇前方机动车停车排队等候或者缓慢行驶时，在人性横道,网状线区域内停车等候的车辆违章查询结构图，如下图显示"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/arrow_left_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="＜"
            android:gravity="center"/>
        <ImageSwitcher
            android:id="@+id/imageSwitcher_is"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <ImageSwitcher
            android:layout_marginLeft="20dp"
            android:id="@+id/imageSwitcher_is2"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <TextView
            android:id="@+id/arrow_right_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="＞"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:text="违章:0"
            android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:text="罚款:0"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="扣分:0"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>