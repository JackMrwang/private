<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tenquestion.BuscatchActivity">


    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/lan"
            android:layout_width="200px"
            android:layout_height="match_parent" />

        <TextView
            android:layout_marginTop="20px"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_marginLeft="100px"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="公交查询"
            android:textSize="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:background="#6C6D6C"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/bus"
            android:layout_width="200px"
            android:layout_height="wrap_content" />

        <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10px"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="901路公交汽车"
        android:textSize="10dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="首:6:00 末:21:00"
            android:textSize="10dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="当前承载能力:1211人"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/busdata"
            android:layout_width="30dp"
            android:background="#B6B9B6"
            android:layout_gravity="center"
            android:layout_marginLeft="10px"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="详情"
            android:textSize="10dp"/>
    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="50dp"
                android:id="@+id/iv1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="image1"
                android:src="@drawable/jt" />
            <TextView
                android:text="中医院站"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C0C0C0">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/smallbus"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:text="1号(101人)"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="5分钟到达"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="距离站台100米"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C0C0C0">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/smallbus"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:text="2号(101人)"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="6分钟到达"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="距离站台1000米"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:onClick="image2"
                android:id="@+id/iv2"
                android:src="@drawable/jt"
                android:layout_marginLeft="50dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="联想大厦站"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C0C0C0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/smallbus"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:text="1号(101人)"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="5分钟到达"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="距离站台1200米"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout4"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0C0C0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/smallbus"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="2号(101人)"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="7分钟到达"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="距离站台300米"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>